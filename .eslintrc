{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": ["error", 4],
        "linebreak-style": ["off"],
        "max-len": ["warn", 120],
        "react/forbid-prop-types": ["off"],
        "react/jsx-closing-bracket-location": ["off"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
